<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"

    android:background="@color/blue">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/textView"
            android:layout_width="314dp"
            android:layout_height="64dp"
            android:fontFamily="@font/arsenal"
            android:text="Reset Password"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="65dp" />

        <TextView   android:layout_margin="10dp"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter User ID"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="195dp" />

        <EditText   android:layout_margin="10dp"
            android:id="@+id/foruserid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button   android:layout_margin="20dp"
            android:id="@+id/submit"
            android:layout_width="300dp"
            android:layout_height="75dp"

            android:backgroundTint="@color/black"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="1dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="340dp" />

        <TextView   android:layout_margin="20dp"
            android:id="@+id/textView6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="An OTP will be sent to the registered Mobile number to verify your identity."
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="276dp" />

        <TextView   android:layout_margin="10dp"
            android:id="@+id/otpsentmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arsenal"
            android:text="OTP has been Successfully sent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:layout_editor_absoluteY="466dp" />

        <EditText   android:layout_margin="10dp"
            android:id="@+id/inotp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:backgroundTint="#191717"
            android:ems="10"
            android:hint="Enter Otp"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:visibility="invisible"

            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="550dp" />

        <Button
            android:id="@+id/subotp"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:backgroundTint="@color/black"
            android:text="Verify Phone"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="1dp"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="614dp" />

    </LinearLayout>
</RelativeLayout>